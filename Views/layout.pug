                            a(href="https://twitter.com/McDonalds" target="blank")
                                i(class="fab fa-twitter")
                            a(href="https://www.instagram.com/mcdonalds/" target="blank")
                                i(class="fab fa-instagram")
                            a(href="https://www.linkedin.com/company/mcdonald%27s-corporation/" target="blank")
                                i(class="fab fa-linkedin-in")